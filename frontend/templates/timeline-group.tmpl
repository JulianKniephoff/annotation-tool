<div class="
    timeline-group
    {{#if isMine}}
        mine{{/if}}
    {{#if selected}}
        selected
    {{/if}}
">
    <div
        class="track-details"
        title="{{name}}"
        data-content="
            {{#if description}}
                {{description}}
            {{else}}
                {{t "timeline.no description"}}
            {{/if}}
            <br>
            <strong>Owner:</strong> {{created_by_nickname}}
        "
    >
        {{#if isMine}}
            <i class="private icon-user" title="{{t "timeline.track.you own"}}"></i>
        {{/if}}
        <div class="content {{#if empty}}empty{{/if}}">
            {{name}}
        </div>
        {{#unless empty}}
            {{#if isMine}}
                <span>
                    <button type="button" class="delete">
                        <i class="icon-trash" title="{{t "timeline.delete track"}}"></i>
                    </button>
                    {{#if isMine}}
                        <button type="button" class="update"><i
                            class="icon-pencil"
                            title="{{t "timeline.track modals.button" context="update"}}"
                        ></i></button>
                        <button
                            type="button"
                            class="visibility"
                            data-trigger="click"
                            title="
                                <div class='visibility' data-id='{{id}}'>
                                    {{#each @access}}
                                        <button type='button' data-access='{{.}}'>
                                            <i
                                                class='icon-white icon-{{kebab (access .)}}'
                                                title='{{t (join " " "timeline.change visibility.to" (bare (access .)))}}'
                                            ></i>
                                        </button>
                                    {{/each}}
                                </div>
                            "
                            class="button"
                            data-placement="top"
                        >
                            <i
                                title="{{t "timeline.change visibility.tooltip"}}"
                                class="icon-dark-grey icon-{{kebab (access access)}}"
                            ></i>
                        </button>
                    {{/if}}
                </span>
            {{/if}}
        {{/unless}}
    </div>
</div>
