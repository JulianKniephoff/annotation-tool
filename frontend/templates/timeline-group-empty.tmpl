<div class="timeline-group">
    <div class="track-id">{{id}}</div>
    <a id="track{{id}}"
       class="content-overlay"
       title="{{secure name}}"
       rel="popover"
       data-content="<p>{{#if description}}{{secure description}}{{else}}{{t "timeline.no description"}}{{/if}}</p>"
      >
        <div class="content empty">
            {{secure name}}
        </div>
    </a>
</div>
