<div class="modal" id="modal-track-selection">
    <div class="modal-header">
        <h3>{{t "track selection.header"}}</h3>
    </div>

    <div class="modal-body">
        {{t "track selection.search.hint"}}
        <div class="input-append">
            <input class="span12" type="text" id="search-track" placeholder="{{t "track selection.search.placeholder"}}">
            <button id="clear-search" class="btn search-only" type="button">{{t "track selection.search.clear"}}</button>
        </div>
        <ul class="list-group">
            {{#each users}}
            <li class="list-group-item user-track-group">
                <label><input type="checkbox" class="user-checkbox" value="{{this.id}}" {{#if this.visible}}checked{{/if}}> {{this.nickname}}</label>
                <span class="search-fields">
                    {{#toUpperCase}}
                    {{this.nickname}}
                    {{/toUpperCase}}
                </span>
                <ul>
                    {{#each this.tracks}}
                    <li>
                        <label>
                            <input type="checkbox" class="track-checkbox" value="{{this.id}}" {{#if this.visible}}checked{{/if}}>
                            {{this.name}}
                        </label>
                    </li>
                    {{/each}}
                </ul>
            </li>
            {{/each}}
        </ul>

        <label><input id="select-all" type="checkbox" value=""> {{t "track selection.(un-)select all"}}</label>
    </div>

    <div class="modal-footer">
        <a id="cancel-selection" href="#" class="btn">{{t "track selection.cancel"}}</a>
        <a id="confirm-selection" href="#" class="btn btn-primary">{{t "track selection.ok"}}</a>
    </div>
</div>
